{% block carrousel %}
  
  <div class="py-5 bg-light">
      <div class="container">
        {% if data.sin_error == 1 %}
          <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong class="animated flash"> <span class='glyphicon glyphicon-ok-sign'></span> Nota:</strong> La subasta se ha creado con éxito!
          </div>
        {% endif %}

         <!-- error por falta de anticipacion-->
        {% if data.error_anticipacion == 1 %}
          <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong class="animated flash"><span class="glyphicon glyphicon-exclamation-sign"></span> Error: </strong> Las subastas deben crearse con un minimo de 6 meses de anticipación.
          </div>
        {% endif %}

        <p class="lead text-muted">Lista de estadías: </p>

        <div class="row">

          {% for e in estadias %}

          <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
              
              <div class="card-body">
                <p class="card-text"> Semana: {{ e.semana }}</p>
                <p class="card-text"> Monto: {{ e.monto }}</p>
                <p class="card-text"> ID residencia: {{ e.id_residencia }}</p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <button id="hide{{ e.id }}" data-toggle="collapse" data-target="#hide{{ e.id }}" type="button" class="collapse show btn btn-secondary my-2">Crear subasta</button>
                    <div id="{{ e.id }}" class="collapse"> bu </div>
                  </div>
                </div>
                <div id="hide{{ e.id }}" class="collapse">
                  
                  <form action="#" enctype="multipart/form-data" method="post"> 
                  <!-->                 
                    <div class="center-block form-group form">
                      <label for="fecha_inicio">Fecha inicio:</label>
                      <input type="date"  id="fecha_inicio" name="fecha_inicio">                  
                    </div>
                  -->
                    <div class="center-block form-group form">
                      <label for="monto">Monto minimo:</label>                      
                      <input type="text" id="monto" name="monto"> 
                    </div>
                    <a href="http://localhost/HomeSwitchHome/admin/subastas/insertar?id_estadia={{ e.id }}"><button id="hide{{ e.id }}" data-toggle="collapse" data-target="#hide{{ e.id }}" type="button" class="btn btn-secondary my-2">Finalizar creacion de subasta</button></a>
                  </form>
                </div>
              </div>
            </div>
          </div>

          {% endfor %}
      
        </div>

        
      </div>
  </div>
  
     
{% endblock %}
