{% block carrousel %}

  <body class="text-center" id="body_registrar">
      <div class="container" id="div_modificar_perfil">
        <br>
        <div class="container">
          <a href="http://localhost/HomeSwitchHome/usuarios/operaciones/perfil"><button id="atras" class="btn btn-secondary my-2">Atrás</button></a>
        </div>

        <form action="http://localhost/HomeSwitchHome/usuarios/modificar_perfil/{{ usuario.id }}" enctype="multipart/form-data" onsubmit="return validarModificarPerfil();" method="post">
          <img class="bd-placeholder-img rounded-circle" src="app/img/HSH-Logo.jpg" alt="" width="90" height="90">

          {% if sin_error == 1 %}
            <div class="alert alert-success alert-dismissible">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <strong class="animated flash"> <span class='glyphicon glyphicon-ok-sign'></span> Nota:</strong> La información del perfil se ha modificado con éxito!
            </div>
          {% endif %}
          {% if menor_de_edad == 1 %}
            <div class="alert alert-danger alert-dismissible">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <strong class="animated flash"><span class="glyphicon glyphicon-exclamation-sign"></span> Error: </strong> No se modificaron los cambios. Debe ingresar una edad mayor a 18 años.
            </div>
          {% endif %}

          <h1 id="titulo_form"class="h3 mb-3 font-weight-normal animated flash">Ingrese los nuevos datos para actualizar el perfil:</h1>

          <p><span class="glyphicon glyphicon-exclamation-sign"></span> Tenga en cuenta que debe modificar al menos un campo</p>

          <div class="container-fluid">

            <div class="container-fluid center-block form-group form">
              <label for="nombreP">Nombre:</label>
              <input type="text" pattern="[A-Za-z ñÑáéíóúÁÉÍÓÚ\s]+" title="Ingrese sólo letras" class="form-control" id="nombreP" placeholder="{{ usuario.nombre }}" value="{{ usuario.nombre }}" name="nombreP" oninput="habilitarSubmit();">
              <p class="animated shake" id="msjNombreP"><span class="glyphicon glyphicon-exclamation-sign"></span> Debe ingresar solo letras.</p>

            </div>

            <div class="container-fluid center-block form-group form">
              <label for="apellidoP">Apellido:</label>
              <input type="text" pattern="[A-Za-z ñÑáéíóúÁÉÍÓÚ\s]+" title="Ingrese sólo letras" class="form-control" id="apellidoP" placeholder="{{ usuario.apellido }}" value="{{ usuario.apellido }}" name="apellidoP" oninput="habilitarSubmit();">
              <p class="animated shake" id="msjApellidoP"><span class="glyphicon glyphicon-exclamation-sign"></span> Debe ingresar solo letras.</p>

            </div>

            <div class="container-fluid center-block form-group form">
              <label for="telefonoP">Telefono:</label>
              <input type="number" min="1" class="form-control" oninput="habilitarSubmit();" id="telefonoP" placeholder="{{ usuario.telefono }}" value="{{ usuario.telefono }}" name="telefonoP">
              <p class="animated shake" id="msjTelefonoP"><span class="glyphicon glyphicon-exclamation-sign"></span> Debe ingresar solo números.</p>

            </div>

            <div class="container-fluid center-block form-group form">
              <label for="fotoP">Foto de perfil:</label>
              <input type="file" class="form-control-file border" oninput="habilitarSubmit();" id="fotoP" name="fotoP">

            </div>

            <div class="container-fluid center-block form-group form">
              <label for="fecha_nacimientoP">Fecha de nacimiento:</label>
              <input type="date" class="form-control" oninput="habilitarSubmit();" id="fecha_nacimientoP" value="{{ usuario.fecha_nacimiento }}" name="fecha_nacimientoP">

            </div>
            <br>
  	        <button id="submitModificar" type="submit" class="btn btn-secondary" disabled>Modificar perfil</button>

          </div>

      </form>



      <br>
    </div>
  </body>
