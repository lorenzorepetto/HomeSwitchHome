{% block carrousel %}
	
	<div class="py-5 bg-light">
	    <div class="container">

        <p class="lead text-muted">Lista de residencias: </p>

	      <div class="row">
                
	      	{% for r in residencias %}

	        <div id="card_residencia" class="col-md-4">
	          <div id="card_residencia" class="card mb-4 shadow-sm">
              <p id="nombre_residencia" class="lead text-muted">{{ r.nombre }}:</p>
	            <img src="{{ r.foto }}" class="card-img-top">
	            <div class="card-body">
                <div id="p_card">
                  <p><span class="glyphicon glyphicon-map-marker"></span> {{ r.calle }}, {{ r.altura }}, {{ r.ciudad }}, {{ r.provincia }}</p>
	                <p class="card-text"> {{ r.descripcion }}</p>
                </div>
	              <div class="center-block">
	                <div id="botones" class="container btn-group">
	                  <a href="http://localhost/HomeSwitchHome/residencias/detalle/{{ r.id }}"><button type="button" class="btn btn-secondary my-2">Ver detalles</button></a>
	                </div>
	              </div>
	            </div>
	          </div>
	        </div>

	        {% endfor %}
	    
	      </div>

	      
	    </div>
	</div>
	
	   
