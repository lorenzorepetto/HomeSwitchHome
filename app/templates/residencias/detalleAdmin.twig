{% block appContenido %}    
		
		<div class="border container">
		   	 <h2>{{ residencia.nombre }}</h2>
		    <div class_"row">
		      <ul class="list-group list-group-flush col-lg-8">
		        <li class="list-group-item"><span class="glyphicon glyphicon-ok"></span> <strong> Descripción: </strong>{{ residencia.descripcion }}</li>
		        <li class="list-group-item"><span class="glyphicon glyphicon-map-marker"></span><strong> Dirección:</strong> {{ residencia.calle }}, {{ residencia.altura }}, {{ residencia.ciudad }}, {{ residencia.provincia }}</li>
		        <li class="list-group-item"><span class="glyphicon glyphicon-user"></span> <strong>Capacidad:</strong> {{ residencia.capacidad }}</li>
            <li class="list-group-item"><a title="Eliminar residencia" href="http://localhost/HomeSwitchHome/admin/residencias/eliminar?id_residencia={{ residencia.id }}" onclick="return confirmation();"><span id="trash" class="glyphicon glyphicon-trash"></span></a></li>          
		      </ul>
		      <img id="foto_detalle_residencia" src="{{ residencia.foto }}" class="perfil float-right col-lg-4" alt="Foto de perfil">  
		    </div>
	 	</div>
		<br>

    <section class="jumbotron text-center">
      <div class="container">
      <h2 id="h1_detalle" class="jumbotron">Estadías: </h2>
        <div class="row">

          {% for e in estadias %}

          <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
              
              <div class="card-body">
                <p class="card-text"><strong><span class="glyphicon glyphicon-ok"></span> Semana:</strong> {{ e.semana }}</p>
                <p class="card-text"><strong><span class="glyphicon glyphicon-usd"></span> Monto:</strong> {{ e.monto|number_format(2, ',', '.') }}</p>
                <a href="#"><button type="button" class="btn btn-secondary">Reservar</button></a>

              </div>
            </div>
          </div>

          {% endfor %}
          
        </div>
     </div>   
  </section>
   

{% endblock %}

{% block appBody %}
{% endblock %}

