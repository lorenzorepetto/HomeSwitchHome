{% block carrousel %}

  <body class="text-center" id="body_registrar">
      <div class="container" id="div_agregar_residencia">  
        <br>
        <form action="http://localhost/HomeSwitchHome/admin/residencias/editar?id_residencia={{ residencia.id }}" enctype="multipart/form-data" method="post">
          <img class="bd-placeholder-img rounded-circle" src="app/img/HSH-Logo.jpg" alt="" width="90" height="90">

          {% if nombre_existente == 1 %}
            <div class="alert alert-danger alert-dismissible">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <strong class="animated flash"><span class="glyphicon glyphicon-exclamation-sign"></span> Error: </strong> No se puede editar la residencia porque ya existe una con ese nombre.
            </div>
          {% endif %}

          {% if sin_error == 1 %}
            <div class="alert alert-success alert-dismissible">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <strong class="animated flash"> <span class='glyphicon glyphicon-ok-sign'></span> Nota:</strong> La residencia se ha modificado con éxito!
              <a class="comun" href="http://localhost/HomeSwitchHome/admin/operaciones/editarResidencias"> Volver atrás</a>
            </div>
          {% endif %}

          <h1 id="titulo_form"class="h3 mb-3 font-weight-normal animated flash">Ingrese los nuevos datos de la residencia:</h1>


          <div class="center-block form-group form">
            <label for="nombre">Nombre:</label>
            <input type="text" class="form-control" id="nombre" placeholder="{{ residencia.nombre }}" name="nombre">
            
          </div>

          <div class="center-block form-group form">
            <label for="descripcion">Descripcion:</label>
            <input type="text" class="form-control" id="descripcion" placeholder="{{ residencia.descripcion }}" name="descripcion">
            
          </div>

          <div class="center-block form-group form">
          	<label for="direccion">Direccion:</label>
            <div class="row">
                <div class="col">
                  	<input type="text" class="form-control" id="calle" placeholder="{{ residencia.calle }}" name="calle">
 
                    
                </div>
                <div class="col">
                	<input type="text" class="form-control" id="altura" placeholder="{{ residencia.altura }}" name="altura">

            	</div>
            </div>
          </div>

          <div class="center-block form-group form">
          	<div class="row">
                <div class="col">
                  	<input type="text" class="form-control" id="ciudad" placeholder="{{ residencia.ciudad }}" name="ciudad">

                    
                </div>
                <div class="col">
                	<input type="text" class="form-control" id="provincia" placeholder="{{ residencia.provincia }}" name="provincia">

            	</div>
            </div>
           </div>

	          <div class="center-block form-group form">
	          	
	            <label for="capacidad">Capacidad:</label>
	            <input type="text" class="form-control" id="capacidad" placeholder="{{ residencia.capacidad }}" name="capacidad">

	           </div>

	           <div class="center-block form-group form">
		            <label for="foto">Foto:</label>
		            <input type="file" class="form-control-file border" id="foto" name="foto">
				        
	            </div>
	   
	        <button type="submit" class="btn btn-secondary">Modificar residencia</button>
	        </div>
      </form>
      <br>
    </div>
  </body>
{% endblock %}
